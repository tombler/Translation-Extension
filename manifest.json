{
  "manifest_version": 2,

  "name": "Translation Station",
  "description": "Translate stuff.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "https://translate.yandex.net/*"
  ]
}